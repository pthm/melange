[sqruff]
dialect = postgres
# LT01: spacing around brackets (PostgreSQL arrays use [] without spaces, Also causes issues with go text/templates)
# LT05: line length
exclude_rules = LT01, LT05
max_line_length = 120

[sqruff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqruff:rules:capitalisation.types]
capitalisation_policy = upper

[sqruff:rules:capitalisation.functions]
capitalisation_policy = upper
